    status_command i3status --conf ~/.i3/i3status.conf | ~/.i3/i3-weather/weather.py --position 0 --update-interval 600 --unit c --format "{text}, {temp}Â°C, {wind_direction_arrow} {wind_speed} km/h" --wrap-i3-status 645686
}

